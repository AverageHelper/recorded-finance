{
	"name": "recorded-finance-client",
	"version": "0.18.11",
	"license": "GPL-3.0",
	"description": "A Svelte app for managing monetary assets.",
	"scripts": {
		"start": "cd server && npm start",
		"release": "./node_modules/.bin/ts-node --esm ./scripts/release.ts",
		"serve": "./node_modules/.bin/vite preview --open",
		"test": "npm run test:client && npm run test:server",
		"test:client": "npm run api:generate && npm run export-version && ./node_modules/.bin/vitest run",
		"test:client:watch": "npm run api:generate && npm run export-version && ./node_modules/.bin/vitest watch",
		"test:server": "cd server && npm run test",
		"test:server:watch": "cd server && npm run test:watch",
		"dev:client": "./node_modules/.bin/vite --open",
		"api:generate": "rm -rf ./src/transport/api.ts && ./node_modules/.bin/oazapfts ./server/openapi.yaml ./src/transport/api.ts",
		"build": "npm run build:client && npm run build:server",
		"build:server": "cd ./server && npm run build",
		"build:client": "rm -rf ./dist && npm run lint && npm run svelte-check && npm run vite:build && cp ./dist/.well-known/security.txt ./dist/security.txt",
		"build:client:quick": "rm -rf ./dist && npm run api:generate && npm run export-version && npm run vite:build",
		"svelte-check": "./node_modules/.bin/svelte-check --tsconfig tsconfig.prod.json --use-new-transformation",
		"vite:build": "./node_modules/.bin/vite build",
		"lint": "npm run api:generate && npm run export-version && npm run lintonly",
		"lint:fix": "npm run api:generate && npm run export-version && npm run lintonly -- --fix",
		"lintonly": "./node_modules/.bin/eslint . --ext .js,.ts",
		"export-version": "./node_modules/.bin/genversion ./src/version.ts -esd"
	},
	"type": "module",
	"dependencies": {
		"@averagehelper/job-queue": "1.0.1",
		"@zerodevx/svelte-toast": "1.0.0-rc.1",
		"@zip.js/zip.js": "2.4.26",
		"atob-lite": "2.0.0",
		"bootstrap": "5.2.3",
		"btoa-lite": "1.0.0",
		"buffer": "6.0.3",
		"crypto-js": "4.2.0",
		"dinero.js": "2.0.0-alpha.8",
		"fuse.js": "6.6.2",
		"lodash-es": "4.17.21",
		"oazapfts": "4.3.3",
		"pubnub": "7.3.0",
		"qrcode": "1.5.1",
		"superstruct": "1.0.3",
		"svelte-i18n": "3.4.0",
		"svelte-navigator": "3.1.6",
		"svelte-portal": "2.2.0",
		"sveltestrap": "5.10.0"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "11.0.0",
		"@sveltejs/vite-plugin-svelte": "2.0.2",
		"@types/atob-lite": "2.0.0",
		"@types/btoa-lite": "1.0.0",
		"@types/crypto-js": "4.1.3",
		"@types/lodash-es": "4.17.6",
		"@types/pubnub": "7.2.0",
		"@types/qrcode": "1.5.0",
		"@types/semver": "7.3.12",
		"@typescript-eslint/eslint-plugin": "6.9.0",
		"@typescript-eslint/parser": "6.9.0",
		"@vitest/coverage-v8": "0.34.6",
		"autoprefixer": "10.4.8",
		"eslint": "8.52.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-config-strictest": "0.8.1",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-deprecation": "2.0.0",
		"eslint-plugin-file-progress": "1.3.0",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "5.0.1",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "48.0.1",
		"eslint-plugin-vitest": "0.3.8",
		"genversion": "3.1.1",
		"keep-a-changelog": "2.1.0",
		"postcss": "8.4.31",
		"prettier": "3.0.3",
		"rollup-plugin-analyzer": "4.0.0",
		"rollup-plugin-visualizer": "5.9.0",
		"sass": "1.53.0",
		"sass-mq": "6.0.0",
		"semver": "7.5.4",
		"svelte": "3.55.1",
		"svelte-check": "3.0.2",
		"svelte-preprocess": "5.0.0",
		"ts-node": "10.9.1",
		"type-fest": "3.6.1",
		"typescript": "4.9.4",
		"vite": "4.4.7",
		"vite-plugin-environment": "1.1.2",
		"vite-tsconfig-paths": "3.5.0",
		"vitest": "0.34.6"
	}
}
